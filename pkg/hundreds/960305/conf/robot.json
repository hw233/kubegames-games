{
	//机器人下注时间，单位毫秒，随机1000-5000
    "bettime": [
        1000,
        3000
    ],

	//下注的地方，第一个表示下庄或者闲的权重，第二个表示下和的权重，第三个表示下对子的权重
	// 0:下庄或闲概率
	// 1：下和概率
	// 2：下庄对或闲对概率
    "betplace": [
        65,
        15,
        20
    ],
    "bet":{
		"bet1":[50, 35, 15, 0, 0],
		"bet2":[45, 40, 10, 5, 0],
		"bet3":[35, 30, 20, 10, 5],
		"bet4":[25, 15, 30, 20, 10]
	},
	//平衡线
    "line": 200,
	//少于或等于这个平衡线的时候的下注权重。less下少的权重，more下多的权重
    "lessline": {
        "less": 60,
        "more": 40
    },
	//超过这个线的权重。less下少的权重，more下多的权重
    "overline": {
        "less": 80,
        "more": 20
    },
    //每次下注万分比
	"betpro": [100,500],
